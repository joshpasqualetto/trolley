.grid_6.prefix_3
  %h2
    %span Sign
    In

  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %fieldset.inputs
      %ol
        %li
          = f.label(:email)
          = f.text_field(:email, :class => "large")
        %li
          = f.label(:password)
          = f.password_field(:password, :class => "large")
        %li
          = f.check_box(:remember_me)
          = f.label(:remember_me, :class => "checkbox")

    %fieldset.buttons
      %ol
        %li= f.submit("Sign in")

  = render(:partial => "devise/shared/links")
