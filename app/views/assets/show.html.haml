.grid_12
  .right.text-center
    .asset-download
      = thumbnail_uri(@asset, :medium)
    %p= link_to("Download Asset (#{number_to_human_size(@asset.file.size)})", download_asset_path(@asset), :class => "button")
    %p.small
      = link_to("Edit Asset", edit_asset_path(@asset))
      |
      = link_to("Delete Asset", asset_path(@asset), :method => :delete)

  %h2= @asset.name
  %ul.metadata
    %li= raw("<span>Created At:</span> #{@asset.created_at.to_s(:long)}")
    %li= raw("<span>Updated At:</span> #{@asset.created_at.to_s(:long)}")
    %li= display_tags(@asset.tags, :tagged_with => true)

  = simple_format(@asset.description)

- unless @related_assets.empty?
  #related-assets
    .grid_12
      %h3 Related Assets
    = render(@related_assets)
