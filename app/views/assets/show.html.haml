.grid_6
  %h2= @asset.name
  = display_tags(@asset.tags, :tagged_with => true)

  %ul.metadata
    %li= raw("<span>Created At:</span> #{@asset.created_at.to_s(:long)}")
    %li= raw("<span>Updated At:</span> #{@asset.created_at.to_s(:long)}")

  = simple_format(@asset.description)

.grid_6
  .asset-download.right
    = thumbnail_uri(@asset, :medium)
    = link_to("Edit Asset", edit_asset_path(@asset))
    = link_to("Download Asset (#{number_to_human_size(@asset.file.size)})", download_asset_path(@asset))

- unless @related_assets.empty?
  #related-assets
    .grid_12
      %h3 Related Assets
    = render(@related_assets)
