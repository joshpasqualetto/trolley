!!! 5

%html
%head
  %meta{ "http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }
  %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
  %title Trolley - Asset manager
  = csrf_meta_tag
  = include_stylesheets(:main, :media => "all")

%body
  #header.group
    .container_12
      .grid_6
        %ul#navigation
          %li= link_to("Browse Assets", root_path)
          %li= link_to("Upload New Asset", new_asset_path)
          // %li= link_to("Logout", "")
      .grid_6.text-right
        // = form_tag(search_assets_path) do |f|
        //   = text_field_tag("q", "")
        //   = submit_tag("Search")

  #content.group
    .container_12
      - unless flash_messages(flash).blank?
        .grid_12
          #flash_messages= raw(flash_messages(flash))

      = yield

  #footer
    .container_12
      .grid_6
        %p Trolley - Asset Manager

      .grid_6.text-right
        %p= link_to("https://github.com/sniperd/trolley.git")

  = include_javascripts(:common)
  = yield(:javascript)
